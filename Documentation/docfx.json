{
    "metadata": [
        {
            "src": [
                {
                    "src": "../Assets",
                    "files": [
                        //"**.csproj"
                        "**.cs"
                    ]
                }
            ],
            "dest": "api",
            "disableGitFeatures": false,
            //"disableDefaultFilter": false,
            //"filter": "filterConfig.yml",
            "globalNamespaceId": "Global",
            "allowCompilationErrors": true,
            "includePrivateMembers": true
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },
            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "toc.yml",
                    "*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],
        "overwrite": [
            {
                "files": [
                    "apidoc/**.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "dest": "_site",
        "globalMetadata": {
            "_appTitle": "Amoebotsim 2.0",
            "_appFooter": "Example Unity documentation",
            "_enableSearch": true
        },
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],
        "template": [
            "statictoc",
        //"templates/custom"
        ],
//        "template": "default",
        "postProcessors": [ "ExtractSearchIndex" ],
        "markdownEngineName": "markdig",
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": false,
        "disableGitFeatures": false
    }
}
